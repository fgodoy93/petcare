<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4">Registrar Antiparasitario</h1>
            
            <div class="card shadow">
                <div class="card-body p-4">
                    <form action="/antiparasitarios" method="POST">
                        <input type="hidden" name="id_mascota" value="{{id_mascota}}">

                        <div class="mb-3">
                            <label for="producto" class="form-label">Producto</label>
                            <input type="text" name="producto" class="form-control" id="producto" 
                                placeholder="Ej: Bravecto, Nexgard">
                        </div>

                        <div class="mb-3">
                            <label for="fecha" class="form-label">Fecha de Aplicaci√≥n *</label>
                            <input type="date" name="fecha" class="form-control" id="fecha" required>
                        </div>

                        <div class="mb-3">
                            <label for="dosis" class="form-label">Dosis</label>
                            <input type="text" name="dosis" class="form-control" id="dosis" 
                                placeholder="Ej: 1 comprimido">
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Registrar Antiparasitario</button>
                            <a href="/mascotas/{{id_mascota}}" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>