<div class="container my-5">
    {{> flash }}

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                {{#if mascota.foto}}
                <img src="{{mascota.foto}}" class="card-img-top" alt="{{mascota.nombre}}"
                    style="height: 350px; object-fit: cover;">
                {{else}}
                <div class="bg-secondary d-flex align-items-center justify-content-center" style="height: 350px;">
                    <i class="bi bi-image" style="font-size: 5rem; color: white;"></i>
                </div>
                {{/if}}
                <div class="card-body">
                    <h3 class="card-title mb-3">{{mascota.nombre}}</h3>

                    <div class="mb-3">
                        <h6 class="text-muted mb-2">üìã Informaci√≥n B√°sica</h6>
                        <p class="mb-1"><strong>Especie:</strong> {{mascota.especie}}</p>
                        <p class="mb-1"><strong>Raza:</strong> {{#if mascota.raza}}{{mascota.raza}}{{else}}-{{/if}}</p>
                        <p class="mb-1"><strong>Sexo:</strong> {{#if (eq mascota.sexo "macho")}}‚ôÇ Macho{{else}}‚ôÄ
                            Hembra{{/if}}</p>
                        {{#if mascota.color}}
                        <p class="mb-1"><strong>Color:</strong> {{mascota.color}}</p>
                        {{/if}}
                        {{#if mascota.peso}}
                        <p class="mb-1"><strong>Peso:</strong> {{mascota.peso}} kg</p>
                        {{/if}}
                    </div>

                    <div class="mb-3">
                        <h6 class="text-muted mb-2">üéÇ Edad</h6>
                        {{#if mascota.fechaNacimiento}}
                        <p class="mb-1"><strong>Nacimiento:</strong> {{formatDate mascota.fechaNacimiento}}</p>
                        <p class="mb-1"><strong>Edad:</strong> {{calcularEdad mascota.fechaNacimiento}} a√±os</p>
                        {{/if}}
                    </div>

                    {{#if mascota.consultas.length}}
                    <div class="mb-3">
                        <h6 class="text-muted mb-2">üè• √öltimo Control</h6>
                        <p class="mb-1"><strong>Fecha:</strong> {{formatDate mascota.consultas.0.fecha}}</p>
                        {{#if mascota.consultas.0.motivo}}
                        <p class="mb-1"><strong>Motivo:</strong> {{mascota.consultas.0.motivo}}</p>
                        {{/if}}
                        {{#if mascota.consultas.0.veterinario}}
                        <p class="mb-1"><strong>Veterinario:</strong> {{mascota.consultas.0.veterinario}}</p>
                        {{/if}}
                    </div>
                    {{/if}}

                    {{#if mascota.vacunas.length}}
                    <div class="mb-3">
                        <h6 class="text-muted mb-2">üíâ √öltima Vacuna</h6>
                        <p class="mb-1"><strong>Tipo:</strong> {{mascota.vacunas.0.tipo}}</p>
                        <p class="mb-1"><strong>Fecha:</strong> {{formatDate mascota.vacunas.0.fecha}}</p>
                        {{#if mascota.vacunas.0.proxima_aplicacion}}
                        <p class="mb-1"><strong>Pr√≥xima:</strong> {{formatDate mascota.vacunas.0.proxima_aplicacion}}
                        </p>
                        {{/if}}
                    </div>
                    {{/if}}

                    {{#if mascota.antiparasitarios.length}}
                    <div class="mb-3">
                        <h6 class="text-muted mb-2">üõ°Ô∏è √öltimo Antiparasitario</h6>
                        <p class="mb-1"><strong>Producto:</strong> {{mascota.antiparasitarios.0.producto}}</p>
                        <p class="mb-1"><strong>Fecha:</strong> {{formatDate mascota.antiparasitarios.0.fecha}}</p>
                        {{#if mascota.antiparasitarios.0.proxima_aplicacion}}
                        <p class="mb-1"><strong>Pr√≥xima:</strong> {{formatDate
                            mascota.antiparasitarios.0.proxima_aplicacion}}</p>
                        {{/if}}
                    </div>
                    {{/if}}

                    <div class="d-grid gap-2 mt-4">
                        <a href="/mascotas/{{mascota.id_mascota}}/edit" class="btn btn-warning">
                            ‚úèÔ∏è Editar Informaci√≥n
                        </a>
                        <form action="/mascotas/{{mascota.id_mascota}}?_method=DELETE" method="POST">
                            <button class="btn btn-danger w-100" type="submit"
                                onclick="return confirm('¬øEliminar a {{mascota.nombre}} y todos sus registros?')">
                                üóëÔ∏è Eliminar
                            </button>
                        </form>
                        <a href="/mascotas" class="btn btn-secondary">‚Üê Volver</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <ul class="nav nav-tabs mb-4" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#vacunas" type="button">
                        üíâ Vacunas
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#antiparasitarios" type="button">
                        üõ°Ô∏è Antiparasitarios
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#consultas" type="button">
                        üè• Consultas
                    </button>
                </li>
            </ul>

            <div class="tab-content">
                <!-- TAB VACUNAS -->
                <div class="tab-pane fade show active" id="vacunas">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4>Historial de Vacunas</h4>
                        <a href="/vacunas/new?id_mascota={{mascota.id_mascota}}" class="btn btn-sm btn-primary">
                            + Nueva Vacuna
                        </a>
                    </div>
                    {{#if mascota.vacunas.length}}
                    <div class="list-group">
                        {{#each mascota.vacunas}}
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <h5 class="mb-2">{{tipo}}</h5>
                                    <p class="mb-1"><strong>üìÖ Aplicada:</strong> {{formatDate fecha}}</p>
                                    {{#if veterinario}}
                                    <p class="mb-1"><strong>üë®‚Äç‚öïÔ∏è Veterinario:</strong> {{veterinario}}</p>
                                    {{/if}}
                                    {{#if duracion_dias}}
                                    <p class="mb-1"><strong>‚è±Ô∏è Duraci√≥n:</strong> {{duracion_dias}} d√≠as</p>
                                    {{/if}}
                                    {{#if proxima_aplicacion}}
                                    <div class="alert alert-success mt-2 mb-0 py-2">
                                        <strong>üìÜ Pr√≥xima aplicaci√≥n:</strong> {{formatDate proxima_aplicacion}}
                                    </div>
                                    {{/if}}
                                </div>
                                <div class="ms-3">
                                    <a href="/vacunas/{{id_vacuna}}/edit" class="btn btn-sm btn-warning mb-1">Editar</a>
                                    <form action="/vacunas/{{id_vacuna}}?_method=DELETE" method="POST">
                                        <button class="btn btn-sm btn-danger w-100" type="submit"
                                            onclick="return confirm('¬øEliminar este registro?')">
                                            Eliminar
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    {{else}}
                    <div class="alert alert-info">
                        <h5>üìã No hay vacunas registradas</h5>
                        <p class="mb-0">Comienza el historial de vacunaci√≥n de {{mascota.nombre}}</p>
                    </div>
                    {{/if}}
                </div>

                <!-- TAB ANTIPARASITARIOS -->
                <div class="tab-pane fade" id="antiparasitarios">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4>Historial de Antiparasitarios</h4>
                        <a href="/antiparasitarios/new?id_mascota={{mascota.id_mascota}}"
                            class="btn btn-sm btn-primary">
                            + Nuevo Antiparasitario
                        </a>
                    </div>
                    {{#if mascota.antiparasitarios.length}}
                    <div class="list-group">
                        {{#each mascota.antiparasitarios}}
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <h5 class="mb-2">{{producto}}</h5>
                                    <p class="mb-1"><strong>üìÖ Aplicado:</strong> {{formatDate fecha}}</p>
                                    {{#if dosis}}
                                    <p class="mb-1"><strong>üíä Dosis:</strong> {{dosis}}</p>
                                    {{/if}}
                                    {{#if duracion_dias}}
                                    <p class="mb-1"><strong>‚è±Ô∏è Duraci√≥n:</strong> {{duracion_dias}} d√≠as</p>
                                    {{/if}}
                                    {{#if proxima_aplicacion}}
                                    <div class="alert alert-success mt-2 mb-0 py-2">
                                        <strong>üìÜ Pr√≥xima aplicaci√≥n:</strong> {{formatDate proxima_aplicacion}}
                                    </div>
                                    {{/if}}
                                </div>
                                <div class="ms-3">
                                    <a href="/antiparasitarios/{{id_antiparasitario}}/edit"
                                        class="btn btn-sm btn-warning mb-1">Editar</a>
                                    <form action="/antiparasitarios/{{id_antiparasitario}}?_method=DELETE"
                                        method="POST">
                                        <button class="btn btn-sm btn-danger w-100" type="submit"
                                            onclick="return confirm('¬øEliminar este registro?')">
                                            Eliminar
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    {{else}}
                    <div class="alert alert-info">
                        <h5>üìã No hay antiparasitarios registrados</h5>
                        <p class="mb-0">Mant√©n protegido a {{mascota.nombre}} registrando sus tratamientos</p>
                    </div>
                    {{/if}}
                </div>

                <!-- TAB CONSULTAS -->
                <div class="tab-pane fade" id="consultas">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4>Historial de Consultas</h4>
                        <a href="/consultas/new?id_mascota={{mascota.id_mascota}}" class="btn btn-sm btn-primary">
                            + Nueva Consulta
                        </a>
                    </div>
                    {{#if mascota.consultas.length}}
                    <div class="list-group">
                        {{#each mascota.consultas}}
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <h5 class="mb-2">{{#if motivo}}{{motivo}}{{else}}Consulta Veterinaria{{/if}}</h5>
                                    <p class="mb-1"><strong>üìÖ Fecha:</strong> {{formatDate fecha}}</p>
                                    {{#if veterinario}}
                                    <p class="mb-1"><strong>üë®‚Äç‚öïÔ∏è Veterinario:</strong> {{veterinario}}</p>
                                    {{/if}}
                                </div>
                                <div class="ms-3">
                                    <a href="/consultas/{{id_consulta}}/edit"
                                        class="btn btn-sm btn-warning mb-1">Editar</a>
                                    <form action="/consultas/{{id_consulta}}?_method=DELETE" method="POST">
                                        <button class="btn btn-sm btn-danger w-100" type="submit"
                                            onclick="return confirm('¬øEliminar este registro?')">
                                            Eliminar
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    {{else}}
                    <div class="alert alert-info">
                        <h5>üìã No hay consultas registradas</h5>
                        <p class="mb-0">Registra las visitas al veterinario de {{mascota.nombre}}</p>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>
