<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4">Registrar Consulta Veterinaria</h1>
            
            <div class="card shadow">
                <div class="card-body p-4">
                    <form action="/consultas" method="POST">
                        <input type="hidden" name="id_mascota" value="{{id_mascota}}">

                        <div class="mb-3">
                            <label for="fecha" class="form-label">Fecha de Consulta *</label>
                            <input type="date" name="fecha" class="form-control" id="fecha" required>
                        </div>

                        <div class="mb-3">
                            <label for="motivo" class="form-label">Motivo</label>
                            <input type="text" name="motivo" class="form-control" id="motivo" 
                                placeholder="Ej: Control rutinario, VacunaciÃ³n">
                        </div>

                        <div class="mb-3">
                            <label for="veterinario" class="form-label">Veterinario</label>
                            <input type="text" name="veterinario" class="form-control" id="veterinario">
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Registrar Consulta</button>
                            <a href="/mascotas/{{id_mascota}}" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>